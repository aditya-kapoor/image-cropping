<h1>Upload</h1>

<div>
  <h3> Original Image </h3>
  <p><%= image_tag @upload.image.url(:original) %></p>
</div>

<div>
  <h3> Cropped Image </h3>
  <p><%= image_tag @upload.image.url(:cropped) %></p>
</div>


<div>
  <h3> Resized Image </h3>
  <% Upload::RESIZE_THUMBNAILS.keys.each do |style| %>
    <p><%= image_tag @upload.image.url(style) %></p>
  <% end %>
</div>

<p>
  <%= link_to "Resize", resize_upload_path(@upload), remote: true %> |
  <%= link_to "Crop", crop_upload_path(@upload) %> |
  <%= link_to "Destroy", @upload, :confirm => 'Are you sure?', :method => :delete %>
</p>